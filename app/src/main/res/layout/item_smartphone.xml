<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_marginBottom="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15sp">

        <ImageView
            android:id="@+id/smartPhonePhoto"
            android:layout_width="130sp"
            android:layout_height="180sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/smartPhoneName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/smartPhonePhoto"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15sp"
            android:textSize="25sp"
            android:text="Name"
            />
        <TextView
            android:id="@+id/smartPhonePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/smartPhoneName"
            app:layout_constraintStart_toEndOf="@+id/smartPhonePhoto"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:textSize="20sp"
            android:text="Price" />

        <TextView
            android:id="@+id/smartPhoneCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/smartPhonePrice"
            app:layout_constraintStart_toEndOf="@+id/smartPhonePhoto"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:textSize="20sp"
            android:text="Price" />

        <TextView
            android:id="@+id/smartPhoneDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/smartPhoneCity"
            app:layout_constraintStart_toEndOf="@+id/smartPhonePhoto"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:textSize="20sp"
            android:text="Price" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

